<div class="row">
  <div class="col-md-4">
    <div class="card" style="overflow: hidden">
      <div class="card-header">
        <h4 class="card-title text-center text-success">Add Image</h4>
      </div>

      <div class="card-body">
        <form method="POST" action="/images/add" enctype="multipart/form-data">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Image Title" name="title" autocomplete="off">
          </div>

          <div class="form-group">
            <textarea name="description" class="form-control" placeholder="Image Description"></textarea>
          </div>

          <div class="form-group">
              <input type="file" name="image">
          </div>

          <button class="btn btn-primary">Upload Photo</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <table class="mt-5 table mt-md-0 table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Operations</th>
        </tr>
      </thead>

      <tbody>
        {{#each photos}}
          <tr>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
              <div class="btn-group">
                <a href="{{imageURL}}" target="_blank" class="btn btn-success px-3">View</a>

                <a href="/images/delete/{{_id}}" class="btn btn-danger">Delete</a>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>