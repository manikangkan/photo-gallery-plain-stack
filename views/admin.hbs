<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title text-center pt-1">Add Image</h5>
      </div>
      <div class="card-body">
        <form method="POST" action="/admin" enctype="multipart/form-data">
          <div class="input-group mb-3">

            <input
              type="text"
              class="form-control"
              placeholder="Title"
              name="title"
              autocomplete="off"
            />
          </div>

          <div class="input-group mb-3">

            <textarea
              name="description"
              class="form-control"
              placeholder="Description"
            ></textarea>
          </div>

          <div class="input-group mb-3">
            <input
              type="file"
              class="form-control"
              id="inputGroupFile02"
              name="image"
            />
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-primary btn-block">Upload Photo</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <table class="table table-hover mt-5 mt-md-0 text-center">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Operations</th>
        </tr>
      </thead>

      <tbody>
        {{#each photos}}
          <tr>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
              <div class="btn-group">
                <a
                  href="{{imageURL}}"
                  target="_blank"
                  class="btn btn-success px-3"
                >View</a>

                <a
                  href="/images/delete/{{_id}}"
                  class="btn btn-danger"
                >Delete</a>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>