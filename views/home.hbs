<div class="container">
  <div
    class="row g-0"
    data-masonry='{"percentPosition":
        true}'
  >
    {{#if photos}}
      {{#each photos}}
        <div class="col-lg-4 col-md-6 col-12 p-2">
          <div class="card">
            <img src="{{imageURL}}" class="card-img-top" alt="{{imageURL}}" />
            <div class="card-body">
              <h5 class="card-title">{{title}}</h5>
              <p class="card-text">{{description}}</p>
              <p class="card-text"><small class="text-muted">Created at
                  {{timestamp}}</small></p>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div
        class="d-flex flex-column justify-content-center align-items-center vh-100"
      >
        <img
          src="https://media.istockphoto.com/photos/metal-bucket-picture-id496847216?k=20&m=496847216&s=612x612&w=0&h=dPAxae27b9hRxYf4cO_fz1vg_0O_lMLD6AXilJpp0RQ="
          alt="khali balti..."
          class="img-fluid"
        />
      </div>
    {{/if}}
  </div>
</div>
<script
  src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"
></script>